@model Ecommerce.MvcWebUI.Models.CartSummaryViewModel
@{
    ViewData["Title"] = "Default";
}
    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Sepet <span class="badge">@Model.Cart.CartLines.Count</span></a>
<ul class="dropdown-menu">
    @foreach (var item in Model.Cart.CartLines)
    {
        <li><a class="dropdown-item" href="#">@item.Product.ProductName <span class="badge">@item.Quantity</span></a></li>
    }
    <li><a class="dropdown-item" href="#">Toplam : @Model.Cart.Total TL</a></li>
    <li class="dropdown-divider"></li>
    <li><a class="dropdown-item" asp-controller="Cart" asp-action="List">Sepete Git</a></li>
</ul>