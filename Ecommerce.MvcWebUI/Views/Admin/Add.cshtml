@using System.Threading.Tasks
@using Ecommerce.MvcWebUI.Models
@model Ecommerce.MvcWebUI.Models.ProductAddViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<h2>Ürün Ekle</h2>

<form asp-controller="Admin" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Product.ProductName">Ürün Adı</label>
        <input asp-for="Product.ProductName" class="form-control" placeholder="Ürün Adı"/>
        <span asp-validation-for="Product.ProductName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.CategoryId">Kategori</label>
        <select asp-for="Product.CategoryId" class="form-control" 
        asp-items="@(new SelectList(Model.Categories,"CategoryId","CategoryName"))"></select>
        <span asp-validation-for="Product.CategoryId"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.UnitPrice">Fiyat</label>
        <input asp-for="Product.UnitPrice" class="form-control" placeholder="Fiyat" />
        <span asp-validation-for="Product.UnitPrice"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.UnitsInStock">Stok</label>
        <input asp-for="Product.UnitsInStock" class="form-control" placeholder="Stok" />
        <span asp-validation-for="Product.UnitsInStock"></span>
    </div>
    <input type="submit" value="Ekle" class="btn btn-success"/>
</form>
